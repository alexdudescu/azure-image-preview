{
  "compilerOptions": {
    "rootDir": "./src",
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": false
  },
  "include": [
    "./global.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}